<body>
  
    <nav class="navbar navbar-light bg-dark text-primary">
        <span class="h1">Fitness Evaluation</span>
      </nav>
<div class="container">
    <div class="mx-auto mt-3 mb-3" id="chart"></div>
    <div class="search-button-wrapper mx-auto row">
      <input class="form-control col-9" type="search" placeholder="Search person" aria-label="Search" class="d-inline-block">
      <button class="btn btn-outline-success col" type="submit">Search</button>
    </div>
  
    <div class="form-wrapper ">
        <div class="fitness-form mx-auto">
            <div class="airman-name d-flex justify-content-between border-bottom mt-4">
              <label for="airman-name" class="p-2">Airman's name:</label>
              <input type="text" name="airman-name" id="airman-name">
            </div>
            <div class="airman-age d-flex justify-content-between border-bottom">
              <label for="airman-age" class="p-2">Airman's age:</label>
              <select id="airman-age">
                <option value="30">under 30 years old</option>
              </select>
            </div>
            <div class="cardio-endurance d-flex justify-content-between border-bottom">
              <label for="cardio-endurance" class="p-2">Cardio Endurance:</label>
              <div>
              <input type="number" name="name" id="cardio-time-1" min= "0" max="59">:<input type="number" name="name" id="cardio-time-2" min= "0" max="59">
              </div>
            </div>
            <div class="body-composition d-flex justify-content-between border-bottom">
              <label for="body-composition" class="p-2">Body Composition:</label>
              <select id="body-composition">
                <option value="35">32.5 or lower</option>
                <option value="35">33</option>
                <option value="35">33.5</option>
                <option value="35">34</option>
                <option value="35">34.5</option>
                <option value="35">35</option>
                <option value="35.5">35.5</option>
                <option value="36">36</option>
                <option value="36.5">36.5</option>
                <option value="37">37</option>
                <option value="37.5">37.5</option>
                <option value="38">38</option>
                <option value="38.5">38.5</option>
                <option value="39">39</option>
                <option value="39.5">39.5 or higher</option>
              </select>
            </div>
            <div class="push-ups d-flex justify-content-between border-bottom">
              <label for="push-ups" class="p-2">Push-ups:</label>
              <input type="number" name="sets" id="push-ups" min= "0" max="999">
            </div>
            <div class="sit-ups d-flex justify-content-between border-bottom">
              <label for="sit-ups" class="p-2">Sit-ups:</label>
              <input type="number" name="reps" id="sit-ups" min= "0" max="999">
            </div>


            <button type="button" class="btn btn-primary mt-4" id="add-workout-button">Add evaluation</button>
    

    </div>
</div>
</div>
